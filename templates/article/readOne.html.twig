{% extends 'base.html.twig' %}

{% block body %}
    <br><br><br>
    <div class="container">
        <h2> {{article.titre}} </h2>
        <br>
        {% if article.image %}
            <img class="card-img-top" src="images\article\{{ article.image }}">
            <br>
        {% endif %}
        <p> {{article.contenu}} </p>
        <br>
        <p> Posté le : {{article.datePoste|date('d/m/Y')}} </p>
        <br>    
        <table class="table">
            <thead>
                <tr>
                    <th>Liste des commentaires</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{comment.contenu}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
			{{ form_row(form.contenu)}}
			<button type="submit" class="btn btn-primary" >Envoyer</button>
		    {{form_end(form)}}
        {% endif %}


         <a href=" {{ path('article_like' , {'id' : article.id}) }}" class="btn btn-link js-like">

            {% if app.user and article.isLikedByUser(app.user) %}
               
                <i class="fas fa-thumbs-up"></i>
            {% else %}
                <i class="far fa-thumbs-up"></i>
            {% endif %}
          
            <span class="js-likes">{{article.likes | length}}</span>
            <span class="js-label">J'aime</span>
        </a>
        {% endif %}
        
    <br><br><br><br>
    </div> 
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>

    function onClickBtnLike(event){
            event.preventDefault();

            const url = this.href;
            const spanCount = this.querySelector('span.js-likes');
            const icone = this.querySelector('i');

            axios.get(url).then(function(response){
                spanCount.textContent = response.data.likes;

                if(icone.classList.contains('fas'))
                 icone.classList.replace('fas', 'far');
                else 
                    icone.classList.replace('far', 'fas');
            }).catch(function(error){
                    if(error.response.status ===403){
                        window.alert("Vous ne pouvez pas liker un article si vous n'etes pas connecté!!!!")
                    } else {
                        window.alert("Une erreur s'est produite, réessayez plus trad")
                    }
                        
            });
    }

    document.querySelectorAll('a.js-like').forEach(function(link){
       link.addEventListener('click', onClickBtnLike); 
    })
</script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Modification d'un article{% endblock %}

{% block body %}
    <section class="container">
        <div class="col-md-6 mx-auto my-5">
            <h1 class="ff-play fs-3 mb-3">Modifier l'article : </h1>
            <h2 class="fs-4 mb-4">{{ article.titre }}</h2>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_row(form.titre, { 'attr': {'class': 'mb-3'} }) }}
            {{ form_row(form.contenu, { 'attr': {'class': 'mb-3'} }) }}
            {{ form_row(form.image, { 'attr': {'class': 'mb-3'} }) }}
            {{ form_row(form.rubrique, { 'attr': {'class': 'mb-3'} }) }}
            {{ form_row(form.valide, { 'attr': {'class': 'mb-3'} }) }}
            {{ form_row(form.a_la_une, { 'attr': {'class': 'mb-3'} }) }}
            <button type='submit' class='btn btn-warning mt-3'>Valider</button>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
{% extends "base.html.twig" %}

{% block title 'Se connecter' %}

{% block body %}
    <section class="container">
        <div class="col-md-6 mx-auto my-5">
            <h1 class="ff-play fs-3 mb-3">Se connecter</h1>
            {% if errors %}
                <div class="alert alert-danger" role="alert">
                    Identifiants invalides
                </div>
            {% endif %}

            <form action="{{ path('utilisateur-login') }}" method="post">
                <div class="form-group">
                    <label for="_username">Email</label>
                    <input type="email" id="_username" name="_username" class="form-control" value=" {{ last_username }} ">
                </div>
                <br>
                <div class="form-group">
                    <label for="_password">Mot de passe</label>
                    <input type="password" id="_password" name="_password" class="form-control">
                </div>
                <br>
                <button type="submit" class="btn btn-warning">Se connecter</button>
            </form>
        </div>
    </section>
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="{{ asset('css/main.css') }}" rel="stylesheet">
            <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div class="container"  style="background-color: red;">
                <header class="blog-header py-3 ">
                    <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-4 pt-1">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a class="link-light" href="/logout">Se d√©connecter</a>
                        {% else %}
                            <a class="link-light" href="http://127.0.0.1:8000/utilisateur/new">S'inscrire</a>
                        {% endif %}
                    </div>
                    <div class="col-4 text-center h1 fs-3">
                        <a class="blog-header-logo text-light text-decoration-none" href="#">
                            At this moment
                        </a>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        <a class="link-light" href="#" aria-label="Search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>
                        </a>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a class="btn btn-sm btn-outline-light" href="/utilisateur/welcome">Voir mon compte</a>
                            {% if app.user.isadmin == 1 %}
                                <br>
                                <a class="btn btn-sm btn-outline-light" href="utilisateur/readAll">Voir tout les utilisateur</a>
                            {% endif %}
                        {% else %}
                            <a class="btn btn-sm btn-outline-light" href="/login">Se connecter</a>
                        {% endif %}
                    </div>
                    </div>
                </header>

                <div class="nav-scroller py-1 mb-2 ">
                    <nav class="nav d-flex justify-content-between">
                    <a class="p-2 link-light" href="#">World</a>
                    <a class="p-2 link-light" href="#">U.S.</a>
                    <a class="p-2 link-light" href="#">Technology</a>
                    <a class="p-2 link-light" href="#">Design</a>
                    <a class="p-2 link-light" href="#">Culture</a>
                    <a class="p-2 link-light" href="#">Business</a>
                    <a class="p-2 link-light" href="#">Politics</a>
                    <a class="p-2 link-light" href="#">Opinion</a>
                    <a class="p-2 link-light" href="#">Science</a>
                    <a class="p-2 link-light" href="#">Health</a>
                    <a class="p-2 link-light" href="#">Style</a>
                    <a class="p-2 link-light" href="#">Travel</a>
                    </nav>
                </div>
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}


        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
            <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>

        {% endblock %}
    </body>
</html>
